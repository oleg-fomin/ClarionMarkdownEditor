<AddIn name="Markdown Editor" author="John Hickey" description="Markdown file viewer and editor for Clarion IDE">
  <Manifest>
    <Identity name="ClarionMarkdownEditor" version="1.0.0"/>
  </Manifest>
  <Runtime>
    <Import assembly="ClarionMarkdownEditor.dll"/>
  </Runtime>
  <Path name="/SharpDevelop/Workbench/Pads">
    <Pad id="MarkdownEditor" category="Tools" title="Markdown Editor"
         icon="PadIcons.ClassBrowser" shortcut="Control|Alt|M"
         class="ClarionMarkdownEditor.MarkdownEditorPad"/>
  </Path>
  <Path name="/Workspace/Tools">
    <MenuItem id="ShowMarkdownEditor" label="Markdown Editor"
              class="ClarionMarkdownEditor.ShowMarkdownEditorCommand"/>
  </Path>
</AddIn>
